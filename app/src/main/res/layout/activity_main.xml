<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- 1. LISTVIEW DE MASCOTAS (EL ELEMENTO QUE FALTABA) -->
    <!-- Este elemento es crucial, ya que el código Java lo busca por el ID "listViewMascotas" -->
    <ListView
        android:id="@+id/listViewMascotas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#EEEEEE"
        android:dividerHeight="1dp" />

    <!-- 2. BOTÓN FLOTANTE PARA AGREGAR NUEVA MASCOTA -->
    <!-- Este elemento se busca por el ID "BtnAddPet" en MainActivity.java -->
    <ImageButton
        android:id="@+id/BtnAddPet"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@android:drawable/ic_input_add"
        android:contentDescription="Agregar Mascota"
        android:background="@drawable/rounded_button_bg"
        android:elevation="4dp"
        app:tint="@android:color/white" />

    <!-- NOTA: Necesitas crear un drawable llamado 'rounded_button_bg.xml' para el fondo del botón,
         o simplemente usar un color sólido si no quieres crear un drawable. -->

</RelativeLayout>

