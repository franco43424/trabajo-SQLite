<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Capa 1: Borde exterior gris claro -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#CCCCCC"/>
            <corners android:radius="4dp"/>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>

    <!-- Capa 2: Un pequeño relleno interior para separar el texto del borde -->
    <item android:top="1dp" android:bottom="1dp" android:left="8dp" android:right="8dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>

    <!-- Capa 3: El ícono de flecha del spinner se posiciona automáticamente -->
</layer-list>
