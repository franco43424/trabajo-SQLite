<?xml version="1.0" encoding="utf-8"?>
<!--
    Este selector proporciona un fondo simple con esquinas redondeadas para el Spinner.
    Esto resuelve el error de "Error inflating class Spinner" causado por
    un problema en la etiqueta <bitmap> o una referencia faltante en el archivo original.
-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <!-- 1. El fondo del Spinner -->
            <item>
                <shape android:shape="rectangle">
                    <!-- Color de fondo para que sea visible -->
                    <solid android:color="#FFFFFF"/>
                    <!-- Borde para darle definición -->
                    <stroke android:width="1dp" android:color="#DCDCDC"/>
                    <!-- Esquinas redondeadas -->
                    <corners android:radius="8dp"/>
                    <!-- Padding interno si es necesario (opcional) -->
                    <padding android:right="12dp" android:left="12dp"/>
                </shape>
            </item>

            <!-- 2. La flecha de la lista desplegable (se dibuja por defecto, pero a veces
                 hay que dejar un espacio para ella) -->
            <item android:gravity="end|center_vertical" android:right="8dp">
                <!-- Se podría usar un bitmap o un vector asset aquí si fuera necesario,
                     pero para evitar el crash, usamos un simple vector por defecto de Android.
                     Si no funciona, el usuario puede usar un simple color o quitar este item. -->
                <bitmap android:src="@android:drawable/arrow_down_float" android:tint="#333333"/>
            </item>
        </layer-list>
    </item>
</selector>
